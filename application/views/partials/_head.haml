%meta{:charset => "utf-8"}
%title= "#{@title_tertiary || @title} | #{app(:site)}"


%meta{ :name    => "description",                     :content => @description || "#{app(:site)}: #{app(:tagline)}" }
%meta{ :name    => "viewport",                        :content => "width=device-width", }
%meta{ :name    => "apple-mobile-web-app-capable",    :content => "yes"}

%link{ :rel => "icon",                                :href => image_path('user/favicon.png')}

/   Include our main bootstrap css file, which includes
/   everything we need to get up & running. 
%link{:href => stylesheet_path('inkpress'),       :media => "all", :rel => "stylesheet"}

%style
  = compile_sass( yield_content :styles )

/   Google Web Fonts. 
/   Their free, use 'em..
%link{  :href  => google_fonts_url, 
        :media => "all", 
        :rel   => "stylesheet"}

/ jQuery! 
%script{ :src => javascript_path("//code.jquery.com/jquery-2.0.3.min.js") }

/[if lt IE 9]
  %script{ :src => javascript_path('//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6/html5shiv.min.js') }